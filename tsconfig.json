{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "__tests__/*"
      ]
    },
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom",
    "@testing-library/react"
  ],
  "include": [
    "next-env.d.ts",
    "jest-dom.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./jest.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}